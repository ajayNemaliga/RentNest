<%- layout('/layouts/boilerplate.ejs') %>
<body>
    <form action="/addListing" method="post">
        <h1>Create a New Listing</h1>
        <div>
            <label for="title" class="form-label">Title:</label>
            <input  type="text" id="title" name="title" class="form-control form-control-lg" required>
        </div>
        <div>
            <label for="description" class="form-label">Description:</label>
            <textarea id="description" name="description" class="form-control " required></textarea>
        </div>
        <div>
            <label for="image" class="form-label">Image URL:</label>
            <input type="url" id="image" name="image"  class="form-control " required>
        </div>
        <div>
            <label for="price" class="form-label">Price:</label>
            <input type="number" id="price" name="price" class="form-control" required>
        </div>
        <div>
            <label for="location" class="form-label">Location:</label>
            <input type="text" id="location" name="location" class="form-control " required>
        </div>
        <div>
            <label for="country" class="form-label">Country:</label>
            <input type="text" id="country" name="country" class="form-control " required>
        </div>
        <div>
            <button type="submit" class="btn btn-primary mb-3">Create Listing</button>
        </div>
    </form>
</body>