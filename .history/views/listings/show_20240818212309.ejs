<% layout("/layouts/boilerplate.ejs")%>

    <body>
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="card mb-3">
                        <h5 class="card-title">
                            <%= listing.title %>
                        </h5>
                        <img src="<%= listing.image %>" class="card-img-top show-img" alt="...">
                        <div class="card-body">
                            <p class="card-text">
                                <%= listing.description %>
                            </p>
                            <p class="card-text">
                                <%= listing.location %>
                            </p>
                            <p class="card-text">
                                <%= listing.country %>
                            </p>
                            <p class="card-text"><small class="text-body-secondary">
                                    <%= listing.price %>
                                </small></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
