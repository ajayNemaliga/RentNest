<% layout('/layouts/boilerplate.ejs') %>
<body>
    <form action="/Listing/<%= listing._id %>?_method=PUT" method="POST">
        <h1>Edit Listing</h1>
        <div>
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" value="<%= listing.title %>" required>
        </div>
        <div>
            <label for="description">Description:</label>
            <textarea id="description" name="description" value="<%= listing.description %>" required><%= listing.description %></textarea>
        </div>
        <div>
            <label for="image">Image URL:</label>
            <input type="url" id="image" name="image" value="<%= listing.image %>">
        </div>
        <div>
            <label for="price">Price:</label>
            <input type="number" id="price" name="price" value="<%= listing.price %>">
        </div>
        <div>
            <label for="location">Location:</label>
            <input type="text" id="location" name="location" value="<%= listing.location %>">
        </div>
        <div>
            <label for="country">Country:</label>
            <input type="text" id="country" name="country" value="<%= listing.country %>">
        </div>
        <button type="submit">update Listing</button>
    </form>
</body>