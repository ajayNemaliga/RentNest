
    <% layout('/layouts/boilerplate.ejs') -%>
<body>
    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 allcards">
    <% for ( let listing of allListings) {%>
        <a href="/Listing/<%= listing._id %>" class="listing-link">
        <div class="card index-card" >
            <img src="<%= listing.image%>" class="card-img-top" alt="..." height="250rem">
            <div class="card-body">
                <p class="card-text"><%= listing.title %></p>
                <p>&#8377; <%= listing.price %>/night</p>
            </div>
        </div>
        </a>
    <% } %>
    </div>
</body>