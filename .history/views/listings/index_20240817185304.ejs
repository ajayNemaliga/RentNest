
    <% layout('/layouts/boilerplate.ejs') -%>
<body>
    <form action="Listing/new/route" method="get">
        <button>Create New Listing</button>
    </form>
    <% for ( let listing of allListings) {%>
        <br><br>
        <img src="<%= listing.image %>" alt="img" height="150" width="200">
        <h2><a href="/Listing/<%= listing.id %>"><%= listing.title %></a></h2>
        <h3>Price : &#8377; <%= listing.price %></h3>
        <p>Location: <%= listing.location %></p>
        <p>country : <%= listing.country %></p>
        <p><%= listing.description %></p>
    <% } %>

    <% for ( let listing of allListings) {%>
    <div class="card" style="width: 18rem;">
        <img src="<%= listing.image%>" class="card-img-top" alt="...">
        <div class="card-body">
            <h2><%= listing.title %></h2>
          <p class="card-text"><%= listing.description %></p>
          <p><%= listing.price %></p>
    <% } %>
        </div>
      </div>
</body>